        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Inventing date:"/>

    <DatePicker
        android:id="@+id/date_field"
        android:layout_width="match_parent"
        android:layout_height="392dp" />
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ListView>
</LinearLayout>
</ScrollView>